<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--<item name="android:textColorPrimary">#ffff</item>-->
        <!--<item name="android:textColorSecondary">#ffff</item>-->
        <!--<item name="android:textColorTertiary">#ffff</item>-->
    </style>
    <style name="AppThemeTransparent" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>
    <style name="AppThemeSettings" parent="AppTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/SettingActivityAnim</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>
    <style name="AppThemeWhite" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>

        <item name="android:windowAnimationStyle">@style/AuthActivityAnim</item>

        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="ThemeSelectStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_marginTop">5dp</item>

        <!--<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>-->
        <!--<item name="android:windowExitAnimation">@anim/push_bottom_out</item>-->
    </style>
    <style name="ShareDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--<item name="android:cacheColorHint">@android:color/transparent</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>-->
        <!--<item name="android:windowExitAnimation">@anim/push_bottom_out</item>-->
    </style>
    <style name="ShareDialogAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in2</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out2</item>
    </style>
    <style name="WaitDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:cacheColorHint">@android:color/transparent</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>-->
        <!--<item name="android:windowExitAnimation">@anim/push_bottom_out</item>-->
    </style>

    <style name="contact_dialog" parent="Theme.AppCompat.Dialog" mce_bogus="1">
    <item name="android:windowMinWidthMajor">98%</item>
    <item name="android:windowMinWidthMinor">98%</item>
    <item name="windowFixedWidthMajor">98%</item>
    <item name="windowFixedWidthMinor">98%</item>
    </style>

    <style name="account_change_dialog" parent="Theme.AppCompat.Dialog" mce_bogus="1">


        <item name="android:windowAnimationStyle">@style/ChangeAccountAnim</item>

        <item name="android:windowMinWidthMajor">98%</item>
        <item name="android:windowMinWidthMinor">98%</item>
        <item name="windowFixedWidthMajor">98%</item>
        <item name="windowFixedWidthMinor">98%</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>


    </style>

    <style name="AnimFade3" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_translate_to1</item>
        <item name="android:windowExitAnimation">@anim/alpha_translate_to0</item>
    </style>

    <style name="SettingActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_translate_to0 </item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
    </style>

    <style name="AuthActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_left </item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_right</item>
    </style>

    <style name="ChangeAccountAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_translate_to0 </item>
        <item name="android:activityCloseEnterAnimation">@anim/alpha_translate_to1</item>
    </style>

    <style name="FeedBackAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
    </style>

</resources>
