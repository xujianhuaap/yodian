<resources>

    <style name="CatogoryWindowAnimation">
        <item name="android:windowExitAnimation">@anim/push_top_out3</item>
        <item name="android:windowEnterAnimation">@anim/push_top_in3</item>
    </style>

    <style name="index_pop">
        <item name="android:windowExitAnimation">@anim/index_pop_hide</item>
        <item name="android:windowEnterAnimation">@anim/index_pop_show</item>
    </style>

    <style name="bank_form_item_bg">
        <item name="android:background">@drawable/bank_form_item_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/normal_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColorHint">#8c8b8b</item>
    </style>

    <style name="Bank" />

    <style name="Bank.Bind" />

    <style name="Bank.Bind.Info" />

    <style name="Text" />

    <style name="Text.Bank" />

    <style name="Text.Bank.Bind" />

    <style name="Text.Bank.Bind.Info" />

    <style name="Bank.Bind.Info.Item">
        <item name="android:layout_marginTop">1px</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/normal_padding_2x</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingTop">@dimen/normal_padding_2x</item>
    </style>

    <style name="Text.Bank.Bind.Info.Item">
        <item name="android:textColor">#8b8a8a</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">@dimen/normal_padding</item>
    </style>

    <style name="formEditTextStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="formLableStyle">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="formItemStyle">
        <item name="android:background">#fff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="slideItemStyle">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/slide_item_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
