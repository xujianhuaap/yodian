<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="skill"
            type="maimeng.yodian.app.client.android.common.model.Skill" />
    </data>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways">
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                app:imgUrl="@{skill.pic}"
                app:layout_scrollFlags="scroll|enterAlways"/>

            <LinearLayout
                android:id="@+id/ll_skill"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic"
                android:background="@color/div_line"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <TextView
                    android:id="@+id/skill_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="@{skill.name}"
                    android:textColor="#fff"
                    app:layout_scrollFlags="scroll|enterAlways"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_scrollFlags="scroll|enterAlways"
                    />
            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:id="@+id/ll_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/fragment_container"
            android:background="@color/colorPrimaryDark"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:scaleType="centerInside"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:src="@drawable/ic_connect_others"
                app:layout_scrollFlags="scroll|enterAlways"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_wrapper"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:text="@{skill.content}"
            app:layout_scrollFlags="scroll|enterAlways"/>


    </RelativeLayout>
</layout>