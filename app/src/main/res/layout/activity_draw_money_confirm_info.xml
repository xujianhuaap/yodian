<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/apply_edit_margin"
        android:layout_marginRight="@dimen/apply_edit_margin"
        android:layout_marginTop="@dimen/apply_edit_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:scaleType="centerInside"
            android:text="@string/zhi_fu_bao_account"
            android:textColor="@color/edit_color"
            android:textSize="@dimen/text_size_normal" />

        <maimeng.yodian.app.client.android.widget.EmojiEditText
            android:id="@+id/zhifubao_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:focusable="true"
            android:minHeight="@dimen/apply_edit_height"
            android:paddingLeft="@dimen/apply_edit_padding_left"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/hint_color" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/division_height"
        android:background="@color/edit_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/apply_edit_margin"
        android:layout_marginRight="@dimen/apply_edit_margin"
        android:layout_marginTop="@dimen/apply_edit_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:scaleType="centerInside"
            android:text="@string/twice_confirm_account"
            android:textColor="@color/edit_color"
            android:textSize="@dimen/text_size_normal" />

        <maimeng.yodian.app.client.android.widget.EmojiEditText
            android:id="@+id/confirm_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:focusable="true"
            android:minHeight="@dimen/apply_edit_height"
            android:paddingLeft="@dimen/apply_edit_padding_left"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/hint_color" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/division_height"
        android:background="@color/edit_color" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="@dimen/margin_small"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"
        android:scaleType="centerInside"
        android:text=""
        android:textColor="@color/edit_color"
        android:textSize="@dimen/text_size_small" />

    <Button
        android:id="@+id/apply_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/apply_edit_margin_top"
        android:layout_marginLeft="@dimen/apply_edit_margin"
        android:layout_marginRight="@dimen/apply_edit_margin"
        android:layout_marginTop="@dimen/margin_Xlarge"
        android:background="@drawable/btn_oval_dark_black"
        android:text="@string/apply_button_submit"
        android:textColor="@android:color/white"
        android:textColorHint="@color/hint_color"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>

