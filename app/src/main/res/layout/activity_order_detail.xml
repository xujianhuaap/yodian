<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_normal"
        android:text="123"
        android:textSize="@dimen/tex_size_large"
        android:textColor="@color/black_deep"
        android:background="@android:color/white"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center" 
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/order_status_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:button="@null"
            android:background="@drawable/ic_unpay"/>
        <CheckBox
            android:id="@+id/process_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:button="@null"
            android:layout_marginRight="@dimen/apply_edit_margin"
            android:layout_marginLeft="@dimen/apply_edit_margin"
            android:background="@drawable/ic_process_default"/>
        <CheckBox
            android:id="@+id/order_status_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:button="@null"
            android:background="@drawable/ic_unaccept_order"/>
        <CheckBox
            android:id="@+id/process_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:button="@null"
            android:layout_marginRight="@dimen/apply_edit_margin"
            android:layout_marginLeft="@dimen/apply_edit_margin"
            android:background="@drawable/ic_process_default"/>
        <CheckBox
            android:id="@+id/order_status_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:button="@null"
            android:background="@drawable/ic_unconfirm_order"/>

    </LinearLayout>
    <RelativeLayout
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/order_skill_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/ic_photo_black_48dp"/>
        <TextView
            android:id="@+id/order_skill_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:singleLine="true"
            android:layout_toRightOf="@+id/order_skill_pic"
            android:layout_marginRight="@dimen/apply_edit_margin"
            android:layout_marginLeft="@dimen/apply_edit_margin"
            android:background="@drawable/ic_process_default"/>
        <TextView
            android:id="@+id/order_skill_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/order_skill_pic"
            android:layout_toRightOf="@+id/order_skill_pic"
            android:layout_marginRight="@dimen/apply_edit_margin"
            android:layout_marginLeft="@dimen/apply_edit_margin"
            android:background="@drawable/ic_process_default"/>
        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/apply_edit_margin"
            android:layout_marginLeft="@dimen/apply_edit_margin"
            android:background="@drawable/ic_process_default"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_normal"
        android:text="123"
        android:textSize="@dimen/tex_size_large"
        android:textColor="@color/black_deep"
        android:background="@android:color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="丽莎"
            android:textSize="@dimen/tex_size_large"
            android:textColor="@color/black_deep"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/contact_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:layout_marginRight="@dimen/apply_edit_margin"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/tex_size_large"
            android:textColor="@color/black_deep"
            android:background="@drawable/ic_contact_buyer"/>

    </RelativeLayout>

</LinearLayout>