<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title_containar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_large"
                android:text="@string/remainder_title_income"/>

            <TextView
                android:id="@+id/divinder_income"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line"
                android:background="@color/colorPrimaryDark"
                android:padding="@dimen/padding_large" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_large"
                android:text="@string/remainder_title_fee"/>

            <TextView
                android:id="@+id/divinder_fee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line"
                android:background="@color/colorPrimaryDark"
                android:visibility="invisible"
                android:padding="@dimen/padding_large" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_large"
                android:text="@string/remainder_title_total"/>

            <TextView
                android:id="@+id/divinder_total"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line"
                android:background="@color/colorPrimaryDark"
                android:visibility="invisible"
                android:padding="@dimen/padding_large" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>