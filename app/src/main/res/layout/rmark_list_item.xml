<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="rmark"
            type="maimeng.yodian.app.client.android.model.Rmark" />
    </data>

    <!--<FrameLayout-->
        <!--android:descendantFocusability="blocksDescendants"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:padding="10dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <TextView
                android:id="@+id/time"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:gravity="bottom"
                android:text="@{rmark.createtime}" />

            <FrameLayout
                android:id="@+id/fra_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:layout_below="@+id/time"
                android:layout_alignTop="@+id/time"
                android:layout_toRightOf="@id/time">
                <ImageView
                    android:id="@+id/btn_menu_delete"
                    android:layout_gravity="right"
                    android:alpha="0"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_menu_delete"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/btn_menu_report"
                    android:layout_gravity="right"
                    android:alpha="0"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_menu_report"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/btn_menu_more"
                    android:padding="2dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_menu_more"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <ImageView
                android:id="@+id/pic"
                android:layout_width="360dp"
                android:layout_height="@dimen/pic_height"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/fra_container"
                android:scaleType="center"
                app:imgUrl="@{rmark.pic}" />

            <TextView
                android:padding="10dp"
                android:id="@+id/content"
                android:background="#fff"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic"
                android:text="@{rmark.content}" />
        </RelativeLayout>
    <!--</FrameLayout>-->
</layout>