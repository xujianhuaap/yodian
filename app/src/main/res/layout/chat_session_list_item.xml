<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="session"
            type="maimeng.yodian.app.client.android.model.chat.Session" />
    </data>

    <RelativeLayout
        android:id="@+id/list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/avatar_container"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:imgUrl="@{session.avatar}"
                app:placeHolder="@{@drawable/default_avatar}"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/unread_count_bg"
                android:gravity="center"
                android:text="@{String.valueOf(session.missCount)}"
                android:visibility="@{session.missCount > 0 ? View.VISIBLE : View.GONE}"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"

            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/avatar_container"
            android:textColor="@android:color/white"
            android:visibility="@{session.msgCount > 0 ? View.VISIBLE : View.GONE}"
            android:text="@{session.nickname}"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="6dp"
            android:textColor="#888888"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/msg_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/avatar_container"
            android:src="@drawable/msg_state_failed_resend"
            android:visibility="@{session.sendFaild ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/time"
            android:layout_toRightOf="@id/msg_state"
            android:ellipsize="end"
            android:padding="7dp"
            android:visibility="@{session.msgCount > 0 ? View.VISIBLE : View.GONE}"
            android:text="@{session.lastContent}"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="14sp" />

    </RelativeLayout>
</layout>