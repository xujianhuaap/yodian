<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="template"
            type="maimeng.yodian.app.client.android.model.SkillTemplate" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#d2d2d2"
                    app:layout_heightPercent="30%h">

                    <ImageView
                        android:id="@+id/skill_pic"
                        app:imgUrl="@{template.pic}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="false"
                        android:scaleType="fitXY" />
                </FrameLayout>


                    <EditText
                        android:id="@+id/skill_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#eeeeee"
                        android:textColorHint="#55000000"
                        android:hint="@string/create_skill_title"
                        android:maxLength="25"
                        android:text="@{template.name}"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/skill_content"
                        android:textColorHint="#55000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#eeeeee"
                        android:hint="@string/create_skill_content"
                        android:gravity="top"
                        android:maxLength="200"
                        android:minLines="6"
                        android:text="@{template.content}"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/skill_price"
                        android:layout_width="match_parent"
                        android:textColorHint="#55000000"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#eeeeee"
                        android:singleLine="true"
                        android:hint="@string/create_skill_price"
                        android:text="@{template.price}"
                        android:textColor="#000" />


                    <EditText
                        android:id="@+id/skill_unit"
                        android:textColorHint="#55000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#eeeeee"
                        android:hint="@string/create_skill_unit"
                        android:singleLine="true"
                        android:maxLength="4"
                        android:text="@{template.unit}"
                        android:textColor="#000" />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </ScrollView>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_margin="@dimen/floating_btn_margin"
            android:src="@drawable/btn_back"
            app:fab_colorNormal="@color/float_colorNormal"
            app:fab_colorPressed="@color/float_colorPressed"
            app:fab_colorRipple="@color/float_colorRipple">

        </com.melnykov.fab.FloatingActionButton>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_margin="@dimen/floating_btn_margin"
            android:src="@drawable/btn_bg"
            app:fab_colorNormal="@color/float_colorNormal"
            app:fab_colorPressed="@color/float_colorPressed"
            app:fab_colorRipple="@color/float_colorRipple"></com.melnykov.fab.FloatingActionButton>
    </FrameLayout>
</layout>