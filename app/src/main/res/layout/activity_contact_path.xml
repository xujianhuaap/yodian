<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/wechat"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tv_wechat"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:drawableLeft="@mipmap/ic_contact_wechat"
            android:textSize="@dimen/text_size_normal"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line"
        android:background="@color/div_line"/>
    <LinearLayout
        android:id="@+id/qq"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tv_QQ"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:drawableLeft="@mipmap/ic_contact_qq"
            android:textSize="@dimen/text_size_normal"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line"
        android:background="@color/div_line"/>

    <LinearLayout
        android:id="@+id/phone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:drawableLeft="@mipmap/ic_contact_phone"
            android:textSize="@dimen/text_size_normal"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line"
        android:background="@color/div_line"/>


</LinearLayout>