<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/top_icon_margin"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_news"
                android:drawablePadding="@dimen/top_icon_margin"
                android:gravity="center_vertical|left"
                android:text="@string/lable_news"
                android:textColor="@color/black_40" />

            <CheckBox
                android:id="@+id/push"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_marginRight="@dimen/margin_normal"
                android:button="@drawable/selector_switch_button"
                android:background="@android:color/transparent"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_line" />

        <TextView
            android:id="@+id/btn_yijian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_icon_margin"
            android:drawableLeft="@mipmap/ic_yijian"
            android:drawablePadding="@dimen/top_icon_margin"
            android:gravity="center_vertical|left"
            android:text="@string/lable_feedback"
            android:textColor="@color/black_40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_line" />

        <TextView
            android:id="@+id/btn_cleancache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_icon_margin"
            android:drawableLeft="@mipmap/ic_cleancache"
            android:drawablePadding="@dimen/top_icon_margin"
            android:gravity="center_vertical|left"
            android:text="@string/lable_cleancache"
            android:textColor="@color/black_40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_line" />

        <TextView
            android:id="@+id/current_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_icon_margin"
            android:drawableLeft="@mipmap/ic_version"
            android:drawablePadding="@dimen/top_icon_margin"
            android:gravity="center_vertical|left"
            android:textColor="@color/black_40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_line" />

        <TextView
            android:id="@+id/btn_change_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_icon_margin"
            android:drawableLeft="@mipmap/ic_change_account"
            android:drawablePadding="@dimen/top_icon_margin"
            android:gravity="center_vertical|left"
            android:text="@string/lable_changeaccount"
            android:textColor="@color/black_40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_line" />
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_margin="@dimen/floating_btn_margin"
        android:src="@mipmap/btn_back"
        app:fab_colorNormal="@color/float_colorNormal"
        app:fab_colorPressed="@color/float_colorPressed"
        app:fab_colorRipple="@color/float_colorRipple" />
</FrameLayout>
