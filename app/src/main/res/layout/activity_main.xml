<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_home" />

    <include layout="@layout/include_list" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_float"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        app:fab_colorNormal="@color/float_colorNormal"
        app:fab_colorPressed="@color/float_colorPressed"
        app:fab_colorRipple="@color/float_colorRipple"
        android:src="@drawable/btn_home_change">

    </com.melnykov.fab.FloatingActionButton>
</FrameLayout>

