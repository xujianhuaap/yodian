<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="maimeng.yodian.app.client.android.model.User" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    app:imgUrl="@{user.avatar}" />

                <LinearLayout
                    android:id="@+id/button_container"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/btn_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/btn_camera" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/btn_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/btn_album" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lable_update_avatar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/lable_nickname" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/auth_input_marginStart"
                android:layout_marginRight="@dimen/auth_input_marginEnd"
                android:background="#fff"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btn_clean"
                    android:background="#0000"
                    android:gravity="center_horizontal"
                    android:hint="@string/hint_nickname"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/auth_input_edit_paddingStart"
                    android:paddingRight="@dimen/auth_input_edit_paddingEnd"
                    android:singleLine="true"
                    android:text="@{user.nickname}"
                    android:textColor="#000"
                    android:textColorHint="#606060" />

                <ImageView
                    android:id="@+id/btn_clean_name"
                    android:layout_width="@dimen/auth_input_clean_size"
                    android:layout_height="@dimen/auth_input_clean_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/auth_input_clean_marginBottom"
                    android:layout_marginRight="@dimen/auth_input_clean_marginRight"
                    android:layout_marginTop="@dimen/auth_input_clean_marginTop"
                    android:padding="@dimen/auth_input_clean_padding"
                    android:src="@drawable/ic_clear" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/lable_wechat" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/auth_input_marginStart"
                android:layout_marginRight="@dimen/auth_input_marginEnd"
                android:background="#fff"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btn_clean"
                    android:background="#0000"
                    android:digits="@string/text_digits"
                    android:gravity="center_horizontal"
                    android:hint="@string/hint_wechat"
                    android:maxLength="32"
                    android:paddingLeft="@dimen/auth_input_edit_paddingStart"
                    android:paddingRight="@dimen/auth_input_edit_paddingEnd"
                    android:singleLine="true"
                    android:text="@{user.wechat}"
                    android:textColor="#000"
                    android:textColorHint="#606060" />

                <ImageView
                    android:id="@+id/btn_clean_wechat"
                    android:layout_width="@dimen/auth_input_clean_size"
                    android:layout_height="@dimen/auth_input_clean_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/auth_input_clean_marginBottom"
                    android:layout_marginRight="@dimen/auth_input_clean_marginRight"
                    android:layout_marginTop="@dimen/auth_input_clean_marginTop"
                    android:padding="@dimen/auth_input_clean_padding"
                    android:src="@drawable/ic_clear" />
            </RelativeLayout>
        </LinearLayout>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_margin="@dimen/floating_btn_margin"
            android:src="@drawable/btn_back"
            app:fab_colorNormal="@color/float_colorNormal"
            app:fab_colorPressed="@color/float_colorPressed"
            app:fab_colorRipple="@color/float_colorRipple" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_margin="@dimen/floating_btn_margin"
            android:src="@drawable/btn_submit_normal"
            app:fab_colorNormal="@color/float_colorNormal"
            app:fab_colorPressed="@color/float_colorPressed"
            app:fab_colorRipple="@color/float_colorRipple" />
    </FrameLayout>
</layout>

