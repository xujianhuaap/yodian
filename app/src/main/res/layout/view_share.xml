<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/share_container_height"
    android:background="@color/colorPrimary"
    android:layout_gravity="center">
    <maimeng.yodian.app.client.android.widget.YDView
        android:id="@+id/contenPic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/share_skill_height"
        app:actualImageScaleType="centerCrop"
        android:layout_gravity="top|center_horizontal" />
    <maimeng.yodian.app.client.android.widget.YDView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:backgroundImage="@mipmap/ic_share_background"
        android:layout_gravity="center_vertical" />
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/share_skill_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="0.75"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <maimeng.yodian.app.client.android.widget.YDView
                    android:id="@+id/avatar"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="@color/colorPrimary"
                    android:layout_gravity="bottom"
                    app:roundingBorderWidth="@dimen/share_avatar_border_width"
                    android:layout_width="@dimen/share_avatar_width"
                    android:layout_height="@dimen/share_avatar_width"
                    android:layout_marginLeft="@dimen/margin_normal"/>
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="@dimen/share_nick_name_width"
                    android:layout_height="wrap_content"
                    android:text="apidf"
                    android:textSize="@dimen/text_size_normal_16"
                    android:textColor="@color/colorPrimaryGrey1"
                    android:layout_marginTop="@dimen/padding_small"
                    android:maxLength="@integer/share_nick_name_length"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/margin_normal" />

                <TextView
                    android:id="@+id/tv_skill_title"
                    android:layout_width="@dimen/share_content_title_width"
                    android:layout_height="wrap_content"
                    android:text="apidf"
                    android:textSize="@dimen/text_size_large"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLength="@integer/share_skill_name_length"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="@dimen/padding_small"
                    android:layout_marginLeft="@dimen/margin_normal" />
                <TextView
                    android:id="@+id/tv_skill_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="apidf"
                    android:textSize="@dimen/text_size_large"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/padding_small"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="@dimen/margin_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="@dimen/margin_normal"
                android:gravity="right|center_vertical"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/share_brand"
                    android:layout_width="@dimen/qrode_width"
                    android:layout_height="@dimen/qrode_width"
                    android:layout_marginTop="@dimen/margin_Xlarge"
                    android:layout_gravity="right"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:src="@mipmap/ic_slogan_yodian"
                    android:gravity="center" />

            </LinearLayout>


        </LinearLayout>

</FrameLayout>
