<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <maimeng.yodian.app.client.android.widget.RoundImageView
                android:id="@+id/avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="apidf"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:maxLength="5"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxWidth="30dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/avatar"/>

            <TextView
                android:id="@+id/tv_skill_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="apidf"
                android:textSize="20sp"
                android:padding="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:maxWidth="150dp"
                android:layout_marginRight="25dp"
               android:layout_toRightOf="@+id/avatar"/>
            <TextView
                android:id="@+id/tv_skill_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="apidf"
                android:textSize="20sp"
                android:padding="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:maxWidth="150dp"
                android:layout_toRightOf="@+id/tv_skill_title"/>
            <TextView
                android:id="@+id/tv_skill_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="apidf"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:maxWidth="200dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@id/tv_skill_title"
                android:layout_alignBottom="@+id/tv_nickname"
                android:layout_below="@id/tv_skill_price"
                android:layout_toRightOf="@id/avatar"/>

        </RelativeLayout>>



    <ImageView
        android:id="@+id/contenPic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_share_welcome"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textSize="24sp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/share_brand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </FrameLayout>




</LinearLayout>