<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/ic_share_background"
    android:visibility="visible">

    <maimeng.yodian.app.client.android.widget.YDView
        android:id="@+id/contenPic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        app:actualImageScaleType="centerCrop"
        android:background="#0f0"
        android:layout_gravity="center" />
        <LinearLayout
            android:weightSum="1"
            android:layout_weight="0.14"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <maimeng.yodian.app.client.android.widget.YDView
                    android:id="@+id/avatar"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="@color/colorPrimary"
                    app:roundingBorderWidth="@dimen/share_avatar_border_width"
                    android:layout_width="@dimen/share_avatar_width"
                    android:layout_height="@dimen/share_avatar_width"
                    android:background="#0ef"
                    android:layout_marginTop="@dimen/margin_Xlarge"
                    android:layout_marginLeft="@dimen/margin_large"/>
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="@dimen/share_nick_name_width"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="apidf"
                    android:textSize="@dimen/text_size_Xlarge"
                    android:padding="@dimen/padding_small"
                    android:textColor="@color/colorPrimaryDark"
                    android:maxLength="@integer/share_nick_name_length"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/margin_large" />

                <TextView
                    android:id="@+id/tv_skill_title"
                    android:layout_width="@dimen/share_content_title_width"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="apidf"
                    android:textSize="@dimen/text_size_large"
                    android:padding="@dimen/padding_small"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_toRightOf="@+id/avatar"/>
                <TextView
                    android:id="@+id/tv_skill_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="apidf"
                    android:textSize="@dimen/text_size_Xlarge"
                    android:padding="@dimen/padding_small"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="@dimen/margin_large"/>
                </LinearLayout>

            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_marginBottom="@dimen/margin_Xlarge"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/share_brand"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="#000"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:src="@mipmap/ic_slogan_yodian"
                    android:gravity="center" />

            </LinearLayout>


        </LinearLayout>

</LinearLayout>