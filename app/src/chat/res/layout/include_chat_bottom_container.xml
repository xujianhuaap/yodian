<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="3"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/btn_take_picture"
        android:layout_gravity="center"
        android:drawableTop="@drawable/chat_takepic_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/attach_take_pic"
        android:textColor="#727171" />


    <TextView
        android:id="@+id/btn_picture"
        android:drawableTop="@drawable/chat_image_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/attach_picture"
        android:textColor="#727171" />

    <TextView
        android:id="@+id/btn_location"
        android:drawableTop="@drawable/chat_location_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/attach_location"
        android:textColor="#727171" />

    <TextView
        android:id="@+id/btn_video"
        android:drawableTop="@drawable/chat_video_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/attach_video"
        android:textColor="#727171" />


    <TextView
        android:id="@+id/btn_file"
        android:drawableTop="@drawable/chat_file_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/attach_file"
        android:textColor="#727171" />

    <TextView
        android:id="@+id/btn_voice_call"
        android:drawableTop="@drawable/chat_voice_call_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/attach_voice_call"
        android:textColor="#727171" />

    <TextView
        android:id="@+id/btn_video_call"
        android:drawableTop="@drawable/chat_video_call_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/attach_video_call"
        android:textColor="#727171" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_row="2"
        android:layout_column="2" />
</GridLayout>